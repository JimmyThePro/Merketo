@model Merketo.Models.ViewModels.AdminProductsCreateViewModel

@{ ViewData["Title"] = "Product Details"; }

<section class="container d-flex justify-content-center my-5">
    <div class="col-md-10">
            <div class="row mt-5">
            <div class="col-md-6">
                <div class="">
                    <div class="text-center pb-1">
                        <img src="~/images/placeholders/501x430.svg" width="490" alt="@Model.Name" />
                    </div>
                    <div class="thumbnail text-center">
                        <img src="~/images/placeholders/501x430.svg" width="120">
                        <img src="~/images/placeholders/501x430.svg" width="120">
                        <img src="~/images/placeholders/501x430.svg" width="120">
                        <img src="~/images/placeholders/501x430.svg" width="120">
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="p-4">
                    <div class="m-4">
                        <div class="mt-4 mb-3">
                            <span class="small text-uppercase">Art.nr: @Model.ArticleNumber</span>
                        </div>
                        <h2 class="text-uppercase">@Model.Name</h2>
                        <div class="price d-flex flex-row align-items-center">
                            <span class="act-price">@Model.Description</span>
                        </div>
                        <div class="price d-flex flex-row align-items-center mt-5">
                            <span class="act-price">$@Model.Price.ToString("0.00")</span>
                        </div>
                        <div class="cart mt-4 align-items-center">
                            <button class="btn-theme text-uppercase mr-2 px-4">Add to cart</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="bg-light pt-3">
    <partial name="/Views/Partials/_TopSelling.cshtml" />
</div>
