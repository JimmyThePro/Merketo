@{ ViewData["Title"] = "My Account"; }

<section class="container-fluid my-5">
    <div class="row mt-4 bg-light justify-content-center shadow-sm">
        @if (signInManager.IsSignedIn(User))
        {
            <div class="p-2 mt-2 d-flex bd-highlight col-10">
                <a class="text-dark text-decoration-none me-auto bd-highlight" asp-controller="Account" asp-action="Index">Welcome, @(User.FindFirst("DisplayName")?.Value)!</a>
                @if (User.IsInRole("admin"))
                {
                    <a class="text-dark text-decoration-none me-auto bd-highlight" asp-controller="Admin" asp-action="Index">Admin Dashboard</a>
                }
                <a class="text-dark text-decoration-none bd-highlight" asp-controller="Account" asp-action="Index">Account: @User.Identity?.Name</a>
                <a class="text-dark text-decoration-none bd-highlight ps-5" asp-controller="Account" asp-action="SignOut">Sign Out</a>
            </div>
        }
    </div>
    <div class="mx-auto col-10 col-xl-6 mt-5">
        @if (TempData["SuccessMessage"] != null)
        {
            <div id="successAlert" class="alert alert-success alert-dismissible fade show text-center my-2 pe-2" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
</section>
