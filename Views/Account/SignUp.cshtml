@model UserSignUpViewModel

@{ ViewData["Title"] = "Sign Up for a New Account"; }

<section class="container">
    <div class="d-flex justify-content-center">
        <form method="post" class="col-10 col-xl-6 my-5" novalidate>
            <h3 class="mt-5 text-center bg-secondary text-white shadow-sm p-2">Sign Up for a New Account</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger d-flex justify-content-center mt-5"></div>
            <div class="mb-3 mt-5">
                <label asp-for="FirstName" class="form-label">First Name*</label>
                <input asp-for="FirstName" onkeyup="validateRequired(event)" class="form-control" autocomplete="none" />
                <small class="text-danger"><span asp-validation-for="FirstName"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Last Name*</label>
                <input asp-for="LastName" onkeyup="validateRequired(event)" class="form-control" autocomplete="none" />
                <small class="text-danger"><span asp-validation-for="LastName"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email*</label>
                <input asp-for="Email" onkeyup="validateRequired(event)" class="form-control" autocomplete="none" />
                <small class="text-danger"><span asp-validation-for="Email"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password*</label>
                <input asp-for="Password" onkeyup="validateRequired(event)" class="form-control" autocomplete="none" />
                <small class="text-danger"><span asp-validation-for="Password"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password*</label>
                <input asp-for="ConfirmPassword" onkeyup="validateRequired(event)" class="form-control" autocomplete="none" />
                <small class="text-danger"><span asp-validation-for="ConfirmPassword"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" autocomplete="none" />
                <small class="text-danger"><span asp-validation-for="PhoneNumber"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="StreetName" class="form-label">Street Name</label>
                <input asp-for="StreetName" class="form-control" autocomplete="none" />
                <small class="text-danger"><span asp-validation-for="StreetName"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="PostalCode" class="form-label">Postal Code</label>
                <input asp-for="PostalCode" class="form-control" autocomplete="none" />
                <small class="text-danger"><span asp-validation-for="PostalCode"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="City" class="form-label">City</label>
                <input asp-for="City" class="form-control" autocomplete="none" />
                <small class="text-danger"><span asp-validation-for="City"></span></small>
            </div>
            <div class="mt-5">
                <div class="d-grid">
                    <button type="submit" class="btn btn-success py-2">CREATE ACCOUNT</button>
                </div>
            </div>
        </form>
    </div>
</section>
