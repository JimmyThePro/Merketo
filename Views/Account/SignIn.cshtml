@model UserSignInViewModel

@{ ViewData["Title"] = "Sign In to your Account"; }

<section class="container">
    <div class="d-flex justify-content-center">
        <form method="post" class="col-10 col-xl-6 my-5" novalidate>
            <div class="mt-5">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div id="successAlert" class="alert alert-success alert-dismissible fade show text-center my-2 pe-2" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>
            <h3 class="mt-5 text-center bg-secondary text-white shadow-sm p-2">Sign In to your Account</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3 mt-5">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" autocomplete="none" />
                <small class="text-danger"><span asp-validation-for="Email"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" autocomplete="none" />
                <small class="text-danger"><span asp-validation-for="Password"></span></small>
            </div>
            <div class="mt-5">
                <div class="d-grid">
                    <button type="submit" class="btn btn-success py-2">SIGN IN</button>
                </div>
                <div class="d-flex justify-content-center mt-4">
                    <p>No Account?&nbsp;</p>
                    <a class="text-dark text-decoration-none" asp-controller="Account" asp-action="SignUp">Sign Up Now!</a>
                </div>
            </div>
        </form>
    </div>
</section>
