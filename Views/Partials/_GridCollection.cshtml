@model IEnumerable<ProductEntity>

<section class="best-collection">
    <div class="container">
        <h1 class="collection-title">Best Collection</h1>
        <ul class="categories">
            <li class="category-item">All</li>
            <li class="category-item">Bag</li>
            <li class="category-item">Dress</li>
            <li class="category-item">Decoration</li>
            <li class="category-item">Essentials</li>
            <li class="category-item">Interior</li>
            <li class="category-item">Laptop</li>
            <li class="category-item">Mobile</li>
            <li class="category-item">Beauty</li>
        </ul>
        @if (Model.Any())
        {
            <div class="collection-grid d-flex align-items-end justify-content-center row">
                @foreach (var product in Model)
                {
                    <a href="products/details/@product.ArticleNumber" class="collection-item col-3 mb-4">
                        <img src="~/images/placeholders/@product.ImageName" alt="@product.ImageName">
                        <div class="body">
                            <div class="title">@product.Name</div>
                            <div class="info">
                                <div class="price">$@product.Price.ToString("0.00")</div>
                                <i class="add-cart fa-regular fa-cart-plus"></i>
                            </div>
                        </div>
                    </a>
                }
            </div>
            <div class="load-more">
                <button class="btn-outline-white">LOAD MORE <i class="fa-solid fa-rotate-right"></i></button>
            </div>
        }
        else
        {
            <div class="d-flex justify-content-center">
                <h4 class="text-danger mt-5">No products created yet.</h4>
            </div>
        }
    </div>
</section>
